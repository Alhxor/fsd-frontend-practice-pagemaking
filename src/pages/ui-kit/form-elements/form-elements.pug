include /components/input/input.pug
include /components/options-dropdown/options-dropdown.pug
include /components/masked-input/masked-input.pug
include /components/date-picker/date-picker.pug
include /components/date-dropdown/date-dropdown.pug
include /components/filter-date-dropdown/filter-date-dropdown.pug
include /components/checkbox/checkbox.pug
include /components/radio/radio.pug
include /components/like-button/like-button.pug
include /components/rate-button/rate-button.pug
include /components/range-slider/range-slider.pug
include /components/button/button.pug
include /components/pagination/pagination.pug


p
+input({ type: "email", id: "email", placeholder: "Email", title: "Text field" })

p
+options-dropdown({
  title: "Dropdown",
  id: "dropdown-0",
  dataKey: "dropdown-0",
  text: "Сколько гостей",
  plural: "гость,гостя,гостей",
  useControls: true,
  options: [
    {name: "взрослые", value: 0}, 
    {name: "дети", value: 0}, 
    {name: "младенцы", value: 0}
  ]
})

p
+options-dropdown({
  title: "Dropdown (detailed)", 
  id: "dropdown-2", 
  dataKey: "dropdown-2",
  text: "Выбор комнат",
  plural: "опций,опции,опций",
  detailed: true,
  useControls: false,

  options: [
    {name: "спальни", value: 0, plural: "спальня,спальни,спален"}, 
    {name: "кровати", value: 0, plural: "кровать,кровати,кроватей"}, 
    {name: "ванные комнаты", value: 0, plural: "ванная комната,ванные комнаты,ванных комнат"}
  ]
})

p
+date-dropdown({
  title: {
    left: "Date left",
    right: "Date right"
  },
  id: "date-dropdown-0",
  dataKey: "date-dropdown-0",
  text: "ДД.ММ.ГГГГ"
})

p
+filter-date-dropdown({
  title: "Filter date dropdown",
  id: "filter-date-dropdown-0",
  dataKey: "filter-date-dropdown-0",
  text: "Выберите даты"
})

p
+masked-input({ type: "text", id: "masked", placeholder: "ДД.ММ.ГГГГ", title: "Masked text field" })

p
+input({ type: "email", id: "sub-email", placeholder: "Email", title: "Subscription text field", submit: true })


p
h3(style="padding: 10px 0") checkbox buttons
+checkbox({ id: "checkbox-0", text: "Можно курить", checked: false })
+checkbox({ id: "checkbox-1", text: "Можно с питомцами", checked: true })
+checkbox({ id: "checkbox-2", text: "Можно пригласить гостей (до 10 человек)", checked: true })

p
h3(style="padding: 10px 0") radio buttons
+radio({ id: "radio-0", name: "sex", value: "male", text: "Мужчина", checked: true })
+radio({ id: "radio-1", name: "sex", value: "female", text: "Женщина" })

p
h3(style="padding: 10px 0") toggle
+checkbox({ id: "checkbox-3", text: "Получать спецпредложения", checked: true, toggle: true })
+checkbox({ id: "checkbox-4", text: "Получать спецпредложения", checked: false, toggle: true })

 
p
h3(style="padding: 10px 0") like button
div(style="display: flex; justify-content: space-between; width: 90px")
  +like-button({ id: "like-0", text: 2 })
  +like-button({ id: "like-1", text: 12, clicked: true })

p
h3(style="padding: 10px 0") rate button
div(style="display: flex; justify-content: space-between; width: 260px")
  +rate-button({ id: "rate-0", stars: 4 })
  +rate-button({ id: "rate-1", stars: 5 })

p
+range-slider({ id: "range-0", title: "range slider", min: 0, max: 20000, start: 5000, end: 10000, units: "₽" })

p
h3(style="padding: 10px 0") buttons
div(style="display: flex; justify-content: space-between; width: 220px")
  +button({ id: "btn-0", type: "full", text: "click me" })
  +button({ id: "btn-0-d", type: "full", text: "click me", disabled: true })

p 
div(style="display: flex; justify-content: space-between; width: 220px")
  +button({ id: "btn-1", type: "border", text: "click me" })
  +button({ id: "btn-1-d", type: "border", text: "click me", disabled: true })

p
div(style="display: flex; justify-content: space-between; width: 140px")
  +button({ id: "btn-2", type: "link", text: "click me" })
  +button({ id: "btn-2-d", type: "link", text: "click me", disabled: true })

p
+button({ id: "btn-3", type: "full", text: "перейти к оплате", submit: true })

