    button.dropdown(id=props.id, data-datakey=props.dataKey, data-contentid=props.contentId)
      span.dropdown__text= props.text
      //- span.dropdown__select(data-plural=props.select.plural)= props.select.title
      i.dropdown__icon-expand
      
