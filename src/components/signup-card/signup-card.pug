include /components/common/card/card.pug
include /components/input/input.pug
include /components/masked-input/masked-input.pug
include /components/radio/radio.pug
include /components/checkbox/checkbox.pug
include /components/button/button.pug

mixin signup-card()
  -
    var pb5 = { "padding-bottom": "5px" }
    var pb10 = { "padding-bottom": "10px" }
    var pb20 = { "padding-bottom": "20px" }
    var pb30 = { "padding-bottom": "30px" }
  .signup-card
    +card({})
      .card__section
        h1 Регистрация аккаунта
      .card__section
        +input({ id: "signup-name", type: "text", placeholder: "Имя" })
        +input({ id: "signup-surname", type: "text", placeholder: "Фамилия" })
        +radio({ id: "signup-sex-m", name: "signup-sex", value: "male", text: "Мужчина", checked: true })
        +radio({ id: "signup-sex-f", name: "signup-sex", value: "female", text: "Женщина" })
      .card__section
        +masked-input({ id: "signup-birthday-date", title: "Дата рождения", type: "text", placeholder: "ДД.ММ.ГГГГ" })
      .card__section
        h3(style=pb5) Данные для входа в сервис
        +input({ id: "signup-email", type: "email", placeholder: "Email" })
        +input({ id: "signup-password", type: "password", placeholder: "Пароль" })
        +checkbox({ id: "signup-subscribe", text: "Получать спецпредложения", checked: false, toggle: true })
      .card__section(style=pb30)
        +button({ id: "signup-submit", type: "full", text: "перейти к оплате", submit: true })
      div(style="display: flex; justify-content: space-between")
        span.signup-card__bottom-text Уже есть аккаунт на Toxin
        +button({ id: "signup-btn-login", type: "border", text: "войти" })
