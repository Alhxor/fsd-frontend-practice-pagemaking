include /components/common/dropdown/dropdown.pug
include /components/common/dropdown-content/dropdown-content.pug
include /components/date-picker/date-picker.pug

mixin date-dropdown({ id, dataKey, title, text })
  -
    var pickerId = `${id}-picker`
    var contentId = `${id}-content`
    var dropLeftId = `${id}-left`
    var dropRightId = `${id}-right`

  .date-dropdown(id=id, class="container-relative", data-datakey=dataKey)
    .date-dropdown__half
      +dropdown({
        title: title.left,
        id: dropLeftId,
        dataKey, text, contentId
      })
    .date-dropdown__half
      +dropdown({
        title: title.right,
        id: dropRightId,
        dataKey, text, contentId
      })
    +dropdown-content({
      id: contentId,
      dataKey,
      modifier: "separate"
    })
      +date-picker({id: pickerId, dataKey})
