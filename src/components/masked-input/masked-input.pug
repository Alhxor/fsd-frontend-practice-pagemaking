mixin masked-input({ id, title, description, type, placeholder })
  -
    var maskedId = id + "-placeholder"
  .input
    label.input__label(for=id)
      span.input__title= title
      span.input__description= description
    .masked-input
      input.input__field.input__field--masked(
        type=type,
        id=id,
        class="js-masked-input"
      )
      span.masked-input__placeholder(id=`${maskedId}`)= placeholder
