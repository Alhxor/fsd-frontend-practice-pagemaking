include /components/common/dropdown/dropdown.pug
include /components/common/dropdown-content/dropdown-content.pug
include /components/common/options/options.pug

mixin options-dropdown({ title, id, dataKey, text, plural, detailed, useControls, options })
  -
    var contentId = id + "-content"
    var optionsId = id + "-options"

  .container-relative
    +dropdown({
      title, id, dataKey, text,
      contentId: contentId
    })
    +dropdown-content({
      id: contentId,
      dataKey,
    })
      +options({
        id: optionsId,
        plural, dataKey, detailed, useControls, options
      })